# Backend Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai-slides-platform
# For Docker: mongodb://mongodb:27017/ai-slides-platform

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# For Docker: REDIS_HOST=redis

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=30d

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# File Upload Configuration
MAX_FILE_SIZE=524288000
# 500MB in bytes
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports

# Email Configuration (Optional - for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ai-slides.com

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=admin@ai-slides.com
ADMIN_PASSWORD=change-this-secure-password

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_AI_GENERATION=true
ENABLE_PDF_EXPORT=true
ENABLE_PPTX_EXPORT=true

# Credit System
FREE_TRIAL_CREDITS=50
FREE_TRIAL_DAYS=7

# Subscription Plans (in cents)
STARTER_PLAN_PRICE=999
PROFESSIONAL_PLAN_PRICE=2999
ENTERPRISE_PLAN_PRICE=9999
